<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :suffix %><br>
    <%= f.text_field :suffix %>
  </div>
  <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :email_confirmation, "Email Confirmation" %><br>
	<% if params[:action] == 'new' %>
      <%= f.text_field :email_confirmation %>
	<% else %>
	  <%= f.text_field :email_confirmation, value: @user.email %>
	<% end %>
    </div>
  <% if params[:action] == 'new' %>
    <div class="field">
      <%= f.label :password %><br>
      <%= f.password_field :password %>
    </div>
    <div class="field">
     <%= f.label :password_confirmation, "Password Confirmation" %><br>
     <%= f.password_field :password_confirmation %>
    </div>
  <% end %>
  <div class="field">
    <% if params[:action] == 'new' %>
	  <%= f.hidden_field :admin, value: false %> 
    <% elsif current_user.admin == true %>
      <%= f.label :admin, "Admin?" %><br>
      <%= f.check_box :admin %>
	<% else %>
	  <%= f.hidden_field :admin, value: false %> 
	<% end %>
  </div>
  <div class="field">
    <% if params[:action] == 'new' %>
	  <%= f.hidden_field :judge, value: false %> 
    <% elsif current_user.admin == true %>
      <%= f.label :judge, "Judge?" %><br>
      <%= f.check_box :judge %>
	<% else %>
	  <% if params[:action] == 'edit' %>
	    <% if current_user.admin == true %>
		    <%= f.label :judge, "Judge?" %><br>
            <%= f.check_box :judge %>
		< % else %>
	      <%= f.hidden_field :judge %> 
		<% end %>
	  <% end %>
	<% end %>
  </div>
  <div class="field">
    <% if params[:action] == 'new' %>
	  <%= f.hidden_field :enabled, value: true %> 
    <% elsif current_user.admin == true %>
      <%= f.label :enabled, "Enabled?" %><br>
      <%= f.check_box :enabled, {checked: "checked"} %>
	<% else %>
	  <%= f.hidden_field :enabled %> 
	<% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

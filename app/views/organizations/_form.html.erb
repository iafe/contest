<%= form_for(@organization) do |f| %>
  <% if @organization.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@organization.errors.count, "error") %> prohibited this organization from being saved:</h2>

      <ul>
      <% @organization.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "Organization Name" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :primary_contact, "Primary Contact (First and Last)" %><br>
    <%= f.text_field :primary_contact %>
  </div>
  <div class="field">
    <%= f.label :address_line_1, "Address Line 1" %><br>
    <%= f.text_field :address_line_1 %>
  </div>
  <div class="field">
    <%= f.label :address_line_2, "Address Line 2" %><br>
    <%= f.text_field :address_line_2 %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state_province, "State or Province/Territory Postal Code" %><br>
    <%= f.text_field :state_province, size: 2 %>
  </div>
  <div class="field">
    <%= f.label :country %><br>
    <%= f.country_select :country, [ "United States", "Canada", "United Kingdom", "Mexico", "Australia", "South Korea" ] %>
  </div>
  <div class="field">
    <%= f.label :zip_code, "Zip Code" %><br>
    <%= f.text_field :zip_code %>
  </div>
  <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :fair, "Is this a fair?" %><br>
    <%= f.check_box :fair, {checked: "checked"}  %>
  </div>
  <div class="field">
    <% if current_user.admin == true %>
      <%= f.label :enabled, "Enabled?" %><br>
      <%= f.check_box :enabled, {checked: "checked"} %>
	<% else %>
	  <%= f.hidden_field :enabled, value: true %> 
	<% end %>
  </div>
  <div class="actions">
    <p><%= f.submit %></p>
  </div>
<% end %>
